<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/novela_title_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de la novela" />

    <EditText
        android:id="@+id/novela_editorial_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Editorial" />

    <EditText
        android:id="@+id/novela_details_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Detalles" />

    <Button
        android:id="@+id/yellow_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Resumen"
        android:background="#FFFF00" />
</LinearLayout>